/* pages/city/choose.wxss */
.current-city-title{
  text-align: left;
  width: 100%;
  height: 60rpx;
  vertical-align: middle;
  line-height: 60rpx;
  background:#b2b2b2;
  opacity:0.4;
}

.current-city-text {
  padding-left: 20rpx;
  font-size:11pt;
  color:black;
}

.current-city-content{
  width: 100%;
  background: white;
  padding: 20rpx 0;
  flex-direction:row;
  display:flex;
}

.city-item{
  font-size: 11pt;
  width: 30%;
  background:white;
}

.hot-city {
  padding: 20rpx;
  width:100%;
}

.province-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  width:100%;
}

.province-item {
  padding: 20rpx;
}

.province-item-text {
  float: left;
  font-size:11pt;
}

.default-line {
  width: 100%;
  padding-top:5rpx;
  border-bottom: 1rpx;
  border-bottom-color: #337ab7;
  border-bottom-style:ridge;
}
/* pages/index/index.wxss */
.header {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 12pt;
  padding: 20rpx 0;
}

.city {
  display: flex;
  flex-direction: row;
  width: 30%;
  padding-left: 40rpx;
  color: #337ab7;
}

.city-item {
  text-align: left;
  color: #337ab7;
}

.merchant-pic {
  width: 100%;
  padding:0;
  margin:0;
  text-align: center;
}

.card-item {
  display: flex;
  flex-direction: column;
  font-size: 12pt;
  padding: 20rpx 0;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top:20rpx;
  background: #337ab7;
}

.card-item-text {
  text-align: left;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top:10rpx;
  padding-bottom:10rpx;
  color:white;
  font: bold;
}

.merchant {
  color: #337ab7;
  width: 100%;
  text-align: left;
  font-size: 12pt;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.search {
  width: 20%;
  text-align: right;
  padding-right: 40rpx;
}

.default-line {
  width: 100%;
  border-bottom: 1rpx;
  border-bottom-color: #337ab7;
  border-bottom-style: solid;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: left;
  width:100%;
  margin-top:20rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  width:100%;
}

.item-label {
  float: left;
  padding-top: 10rpx;
  padding-left: 20rpx;
  width: 150rpx;
}

.item-icon {
  float: left;
  padding-top: 30rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  width: 50rpx;
}

.item-text {
  float: left;
  width: 100%;
  font-size: 11pt;
  padding-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.text-line {  
  border-bottom: 1rpx;
  border-bottom-color: #337ab7;
  border-bottom-style: solid;
}

.form-item-list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.item-title {
  float: left;
  padding: 20rpx;
  font-size: 12pt;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #337ab7;
}

.item-content {
  float: left;
  padding: 20rpx;
  font-size: 11pt;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.item-pic {
  width:100%;
  text-align:center;
}


.product-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  width:100%;
  margin-top:20rpx;
}

.product-item {
  display: flex;
  flex-direction: row;
  width:100%;
}

.product-left {
  width:50%;
  padding-left:40rpx;
  padding-right:20rpx;
  padding-bottom:40rpx;
}

.product-right {
  width:50%;
  padding-left:20rpx;
  padding-right:40rpx;
  padding-bottom:40rpx;
}
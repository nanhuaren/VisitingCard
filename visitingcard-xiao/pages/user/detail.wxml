<!--pages/user/detail.wxml-->
<view class="container">
  <view class='default-gray'></view>

  <view class='add-form'>
    <form bindsubmit="formSubmit">
      <view class='form-item'>
        <view class='head-left'>
          <image bindtap='bindAddUserImgTap' class='head-img' src='{{userInfo.headerImg==null?"/images/logo.jpg":"https://www.nanhuaren.cn/upload/"+userInfo.headerImg}}'></image>
        </view>
        <view class='head-right'>
          <view class='form-item form-item-line'>
            <input class='form-item-input' name='name' type='text' value='{{userInfo.name}}'></input>
          </view>
          <view class='form-item'>
            <input class='form-item-input' name='mobile' type='number' value='{{userInfo.mobile}}'></input>
          </view>
        </view>
      </view>
      <view class='default-gray'></view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>电话</label>
        <input class='form-item-input' name='tel' type='number' value='{{userInfo.tel}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>传真</label>
        <input class='form-item-input' name='fax' type='number' value='{{userInfo.fax}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>QQ</label>
        <input class='form-item-input' name='qq' type='number' value='{{userInfo.qq}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>微信</label>
        <input class='form-item-input' name='weixin' type='text' value='{{userInfo.weixin}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>二维码</label>
        <image class='form-item-image' name='weixinQrcode' bindtap='bindAddWeixinQrcodeTap' src='/images/add-img.png'></image>
      </view>
      <view class='form-item-image-list'>
        <block wx:key="merchantLogo" wx:if='{{userInfo.weixinQrcode!=null}}'>
          <image class='form-item-image-detail' src='https://www.nanhuaren.cn/upload/{{userInfo.weixinQrcode}}'></image>
        </block>

      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>邮箱</label>
        <input class='form-item-input' name='email' type='text' value='{{userInfo.email}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>所在城市</label>
        <input class='form-item-input' name='province' type='text' value='{{userInfo.province}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>详细地址</label>
        <input class='form-item-input' name='address' type='text' value='{{userInfo.address}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>简介</label>
        <textarea class='form-item-textarea' name='description' auto-height value='{{userInfo.description}}'></textarea>
      </view>
      <view class='default-gray'></view>
      <view class='default-gray'></view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>公司
          <text class='form-item-label-required'>*</text>
        </label>
        <input class='form-item-input' name='merchantName' type='text' value='{{userInfo.merchantName}}'></input>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>职务
          <text class='form-item-label-required'>*</text>
        </label>
        <input class='form-item-input' name='merchantPosition' type='text' value='{{userInfo.merchantPosition}}'></input>
      </view>

      <view class='form-item form-item-line'>
        <label class='form-item-label'>行业</label>
        <input class='form-item-input' name='merchantType' type='text' value='{{userInfo.merchantType}}'></input>
      </view>

      <view class='form-item form-item-line'>
        <label class='form-item-label'>简介</label>
        <textarea class='form-item-textarea' name='merchantDescription' auto-height value='{{userInfo.merchantDescription}}'></textarea>
      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>公司图标</label>
      </view>
      <view class='form-item-image-list'>
        <block wx:key="merchantLogo" wx:for="{{merchantLogos}}" wx:for-item="merchantLogo">
          <image class='form-item-image-detail' src='https://www.nanhuaren.cn/upload/{{merchantLogo}}'></image>
        </block>

      </view>
      <view class='form-item form-item-line'>
        <label class='form-item-label'>产品图片</label>
        <image class='form-item-image' name='merchantPicture' bindtap='bindAddMerchantImgTap' src='/images/add-img.png'></image>
      </view>
      <view class='form-item-image-list'>
        <block wx:key="merchantPicture" wx:for="{{merchantPictures}}" wx:for-item="merchantPicture">
          <image class='form-item-image-detail' src='https://www.nanhuaren.cn/upload/{{merchantPicture}}'></image>
        </block>
      </view>
      <view class='card-footer'>
        <button class='card-footer-button' formType="submit">保存</button>
      </view>
    </form>
  </view>

</view>